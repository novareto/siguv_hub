[plugin:redirector]
use = repoze.who.plugins.redirector:make_plugin
login_url = /login

[plugin:auth_tkt]
# identification and authentication
use = uvc.concierge.ticket:make_plugin
secret = s33kr1t
cookie_name = oatmeal
secure = False 
include_ip = False
pkey = ${buildout:directory}/identity/server.key

[plugin:portals]
# identification and authentication
use = uvc.concierge.login:PortalsLoginPlugin

[plugin:basicauth]
# identification and challenge
use = repoze.who.plugins.basicauth:make_plugin
realm = 'sample'

[general]
request_classifier = repoze.who.classifiers:default_request_classifier
challenge_decider = repoze.who.classifiers:default_challenge_decider
remote_user_key = REMOTE_USER

[identifiers]
# plugin_name;classifier_name:.. or just plugin_name (good for any)
plugins =
      basicauth
      auth_tkt

[authenticators]
# plugin_name;classifier_name.. or just plugin_name (good for any)
plugins =
      auth_tkt
      portals

[challengers]
# plugin_name;classifier_name:.. or just plugin_name (good for any)
plugins =
      redirector;browser
      basicauth
